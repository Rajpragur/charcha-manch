rules_version = '2';

// Craft rules based on data in your Firestore database
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload discussion media
    match /discussion_media/{fileName} {
      allow read: if true; // Public read access for media
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Allow authenticated users to upload profile images
    match /profile_images/{userId}/{fileName} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && request.auth.uid == userId; // Users can only upload their own profile images
    }
    
    // Allow authenticated users to upload blog images
    match /blog_images/{fileName} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
